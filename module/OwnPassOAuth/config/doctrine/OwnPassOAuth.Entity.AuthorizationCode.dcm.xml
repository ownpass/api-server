<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="OwnPassOAuth\Entity\AuthorizationCode" table="oauth_authorization_code">
        <id name="authorizationCode" type="string" />

        <many-to-one target-entity="OwnPassOAuth\Entity\Application" field="application">
            <join-column referenced-column-name="client_id" on-delete="CASCADE" nullable="false" />
        </many-to-one>

        <many-to-one target-entity="OwnPassUser\Entity\Account" field="account">
            <join-column on-delete="CASCADE" nullable="false" />
        </many-to-one>

        <field name="redirectUri" type="string" length="2000" />
        <field name="expires" type="datetime" />
        <field name="scope" type="string" length="2000" nullable="true" />
    </entity>
</doctrine-mapping>
