<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="OwnPassApplication\Entity\Identity" table="user_identity">
        <id name="id" type="uuid_binary" />

        <field name="creationDate" type="datetime">
            <gedmo:timestampable on="create" />
        </field>

        <field name="directory" type="string" />
        <field name="identity" type="string" />

        <many-to-one target-entity="OwnPassApplication\Entity\Account" field="account" orphan-removal="true">
            <join-column on-delete="CASCADE" />
        </many-to-one>
    </entity>
</doctrine-mapping>
